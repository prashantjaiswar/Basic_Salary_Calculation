#include<stdio.h>
int
main ()
{
  float bs, gs, da, ra;		//bs is basic salary, gs is gross salary, da is dearness allowance, ra is rent allowance.
  printf ("Enter your basic salary:");
  scanf ("%f", &bs);
  da = 0.4 * bs;
  ra = 0.2 * bs;
  gs = bs + da + ra;
  printf ("Your gross income is %f", gs);
  return 0;
}
